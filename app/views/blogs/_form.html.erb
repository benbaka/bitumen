<%= form_for(@blog) do |f| %>
  <% if @blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

      <ul>
      <% @blog.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :summary %><br>
    <%= f.text_field :summary %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>
  <div class="field">
    <%= f.label :date_of_creation %><br>
    <%= f.datetime_select :date_of_creation %>
  </div>
  <div class="field">
    <%= f.label :category %><br>
    <%= f.select (:category_id) do %>
        <% if @blog.new_record? %>
            <%= options_from_collection_for_select(@categories, :id, :name) %>
        <%else%>
            <%= options_from_collection_for_select(@categories, :id, :name, @blog.category.id) %>
        <%end%>
        <%end %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
