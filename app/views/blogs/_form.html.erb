<%= form_for(@blog) do |f| %>
  <% if @blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

      <ul>
      <% @blog.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, class:"form-control" %>
  </div>
  <div class="field">
    <%= f.label :summary %><br>
    <%= f.text_field :summary, class:"form-control" %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body, class:"form-control" %>
  </div>
  <div class="field">
    <%= f.label :date_of_creation %><br>
    <%= f.datetime_select :date_of_creation, class:"datepicker" %>
  </div>
  <div class="form-group">
    <%= f.label :category %><br>
    <%= f.select (:category_id) ,class:'form-control' do %>
        <% if @blog.new_record? %>
            <%= options_from_collection_for_select(@categories, :id, :name) %>
        <%else%>
            <%= options_from_collection_for_select(@categories, :id, :name, @blog.category.id) %>
        <%end%>
        <%end %>
  </div>
  <div class="field">
      <%= f.label "Can be seen by all ?" %><br>
      <%= f.check_box :global %>
  </div>
  <div class="actions">
    <%= f.submit class:'btn btn-primary' %>
  </div>
<% end %>
