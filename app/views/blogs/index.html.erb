<div class="panel">
  <div class="panel-body">
    <!-- blog entries -->
    <div class="row">
      <% @blogs.each do |blog| %>
          <br>

        <div class="col-md-10 col-sm-9">
          <div >
            <% if blog.blog_image.present? %>
                <%=  image_tag(blog.blog_image.url , size: "900x400", class: 'img-responsive')%>
            <% else %>
                <a href="#" class="story-img"><%= image_tag('nature-4.jpg') %></a>
            <%end%>
          </div>
            <h3><%= blog.title %> </h3>
            <div class="row">
              <div class="cols-xs-9">
                <p><%= truncate( blog.body , :length => 250 ) %></p>
                <p class="lead"><%= link_to 'Read More', blog,  :class => "btn btn-default" %></p>
                <p class="pull-right"><span class="label label-default">keyword</span> <span class="label label-default">tag</span> <span class="label label-default">post</span></p>
                <ul class="list-inline">
                  <li><%= time_ago_in_words(blog.created_at) %></li>
                  <li><i class="glyphicon glyphicon-comment"></i> <%= pluralize(blog.comments.size, 'comment') %></a></li>
                </ul>
              </div>
              <div class="col-xs-3"></div>
            </div>
          <br>
          <hr>
            </div>
          <% end %>
        </div>
    </div>
  </div>
