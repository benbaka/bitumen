<h3>Rate Blog</h3>

<%= form_for(@rating) do |f|  %>

    <div class="field">
      <%= f.label :rating %><br/>
      <%= f.text_field :value %>
    </div>
<div class="actions">
  <%= f.submit %>
</div>

<% end %>

